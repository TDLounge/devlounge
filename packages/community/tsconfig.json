{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"outDir": "./dist",
		"lib": ["ES2020"],
		"moduleResolution": "node",

		"strict": true,
		"declaration": false,
		"strictNullChecks": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"allowJs": true
	},
	"include": ["src/**/*"],
	"exclude": ["dist"]
}